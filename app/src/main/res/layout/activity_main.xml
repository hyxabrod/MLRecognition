<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/white"
    android:weightSum="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_weight="1"
        android:id="@+id/iv_scanned_face"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_weight="1"
        android:id="@+id/tv_scanned_text"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:includeFontPadding="false"
        android:textSize="12sp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btn_start_text_scanner"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center|bottom"
        android:text="@string/run_text_scanner" />

    <Button
        android:id="@+id/btn_start_face_scanner"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center|bottom"
        android:text="@string/run_face_scanner" />
</LinearLayout>
